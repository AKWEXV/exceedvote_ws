# Routes
# This file defines all application routes (Higher priority routes first)
# ~~~~

# Home page
GET     /                           controllers.Application.index()

# Map static resources from the /public folder to the /assets URL path
GET     /assets/*file               controllers.Assets.at(path="/public", file)

# REST service
GET     /api/v1/contestant          controllers.Contestants.indexXml()
GET     /api/v1/contestant/:id      controllers.Contestants.contestantXml(id: Long)
GET     /api/v1/criterion           controllers.Criteria.indexXml()
GET     /api/v1/criterion/:id       controllers.Criteria.criterionXml(id: Long)
GET     /api/v1/myvote/:id			controllers.Myvotes.myvoteXml(id: Long)
POST    /api/v1/vote                controllers.Vote.vote()